<style>
    .layout-admin {
        display: flex;
        flex-grow: 1;
        min-width: 0;
        min-height: 100vh;
        flex-direction: column;
        .admin-header {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            box-sizing: border-box;
            flex-shrink: 0;
            position: sticky;
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }
        .admin-header-wrapper {
            position: relative;
            display: flex;
            align-items: center;
            width: 100%;
            margin-top: 1rem;
            min-height: 64px;
        }
        .admin-navbar {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            .admin-navbar-left {
                display: flex;
                cursor: pointer;
                align-items: center;
                .btn {
                    margin-right: 10px;
                    border: none;
                    background-color: #fff;
                }
            }
            .admin-navbar-left > h2 {
                margin: 0px;
                font-size: 24px;
                line-height: 1.467;
                font-weight: 500;
            }
            .admin-navbar-right > button {
                margin-right: 10px;
                background-color: #fff;
                border: none;
            }
            .admin-navbar-right > button > span{
                font-size: 16px;
                font-weight: 300;
            }

            .admin-navbar-right > .btn {
                margin-right: 10px;
                padding: 6px 12px;
                border: 1px solid #333;
                border-radius: 6px;
                background-color: #6b6bf9;
                cursor: pointer;
            }
            .admin-navbar-right > .btn > span {
                color: #fff;
            }
        }
        
        .admin-content {
            margin-left: 1.5rem;
            margin-right: 1.5rem;
            margin-top: 10px;
            .admin-content-wrapper {
                padding-left: 0.625rem;
                padding-right: 0.625rem;
                padding-top: 0.5rem;
                padding-bottom: 0.5rem;
            }
            .admin-content-wrapper > hr {
                border-width: 0px 0px thin;
                border-style: solid;
                border-color: rgba(47, 43, 61, 0.16);
                /* margin: 0px !important; */
            }
            .content-fiels {
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            .content-fiels > span {
                margin-right: 2.5rem;
                font-size: 16px;
                font-weight: 600;
            }
            .content-blog > ul {
                list-style-type: none;
            }
        }
    }
</style>
<div class="layout-admin">
    <header class="admin-header">
        <div class="admin-header-wrapper">
            <div class="admin-navbar">
                <div class="admin-navbar-left">
                    <button class="btn" type="button">
                        <img style="height: 16px; width: 16px;" src="../../images/menu.png"></img>
                        <span></span>
                    </button>
                    <h2>Posts</h2>
                </div>
                <div class="admin-navbar-right">
                    <button type="button">
                        <img style="height: 16px; width: 16px;" src="../../images/search-symbol.png"></img>
                        <span></span>
                    </button>
                    <button>
                        <span>All posts</span>
                        <i></i>
                    </button>
                    <button>
                        <span>All tags</span>
                        <i></i>
                    </button>
                    <button id="newPost" class="btn" type="button">
                        <span>New post</span>
                    </button>
                </div>
            </div>
        </div>
    </header>
    <div class="admin-content">
        <div class="admin-content-wrapper">
            <div class="content-fiels">
                <span>TITLE</span>
                <span>STATUS</span>
            </div>
            <hr>
            <div class="content-blog">
                <ul>
                    <li></li>
                </ul>
            </div>
            <hr>
        </div>
    </div>
