<div id="faq" class="faq section">
    <div class="titleSection">Got Questions ?</div>
    <div class="accordion">
        <% for (let index = 0; index < questions.length; index++) { const iterator = questions[index]  %>
            <div class="accordion-item">
                <button class="titleAccordion accordion-button" type="button"
                    data-bs-toggle="collapse" data-bs-target="#collapse_<%= index %>" aria-expanded="<%= index == 0 ? "true" : "false" %>"
                    aria-controls="collapse_<%= index %>">
                    <%= iterator.question %>
                </button>
                <div id="collapse_<%= index %>" class="accordion-collapse collapse <%= index == 0 ? "show" : "" %>"
                    data-bs-parent="#accordionExample">
                    <div class="accordion-body contentAccordion">
                        <%= iterator.answer %>
                    </div>
                </div>
            </div>
    <% } %>
    </div>
</div>